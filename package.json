{
  "name": "ecommerce-platform",
  "version": "1.0.0",
  "description": "Single-Seller Ecommerce Platform - Monorepo with Strapi backend and Astro frontend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build",
    "dev": "nx run-many --target=dev",
    "test": "nx run-many --target=test",
    "lint": "nx run-many --target=lint",
    "strapi:dev": "nx run strapi:dev",
    "strapi:build": "nx run strapi:build",
    "strapi:start": "nx run strapi:start",
    "web:dev": "nx run web:dev",
    "web:build": "nx run web:build",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "dev:setup": "./scripts/dev-setup.sh",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@nx/workspace": "^21.4.1",
    "nx": "^21.4.1",
    "typescript": "^5.9.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@tailwindcss/aspect-ratio": "^0.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
