---
import UserDropdown from '../ui/user-dropdown.tsx';
import { CategoryDropdown } from '../ui/CategoryDropdown.tsx';

import { MdOutlineFavoriteBorder, MdOutlineShoppingCart, MdMyLocation, MdOutlineAccessTime, MdOutlineMenu, MdOutlineSearch } from "react-icons/md";
import { LuArchive } from "react-icons/lu";

const siteName = import.meta.env.PUBLIC_SITE_NAME || 'Ecommerce Store';
---

<!-- Top Navigation Bar - Fixed at top -->
<div class="header-top-bar border-b border-gray-100 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-10 items-center justify-between text-sm">
      <!-- Left side - Location and Store Info -->
      <div class="flex items-center space-x-2 sm:space-x-4">
        <div class="flex items-center space-x-1 sm:space-x-2">
          <MdMyLocation className="h-4 w-4 text-orange-500" client:only="react" />
          <span class="text-xs text-gray-700 sm:text-sm">Jakarta</span>
          <a href="#" class="text-xs text-blue-600 hover:text-blue-800"
            >change</a
          >
        </div>
        <div class="hidden items-center space-x-2 sm:flex">
          <span class="text-xs text-gray-700">Store Jakarta</span>
          <MdOutlineAccessTime className="h-4 w-4 text-gray-500" client:only="react" />
          <span class="text-xs text-gray-600"
            >Mon - Sat (09:00-20:00), Sun/Holiday (10:00-18:00)</span
          >
          <a href="#" class="text-xs text-blue-600 hover:text-blue-800"
            >More details</a
          >
        </div>
      </div>

      <!-- Right side - Service Links -->
      <div class="hidden items-center space-x-4 md:flex lg:space-x-6">
        <a
          href="/service-center"
          class="text-xs text-blue-600 hover:text-blue-800 lg:text-sm"
          >Contact Us</a
        >
        <a
          href="/service-center"
          class="text-xs text-blue-600 hover:text-blue-800 lg:text-sm"
          >About Us</a
        >
        <a
          href="/how-to-buy"
          class="text-xs text-blue-600 hover:text-blue-800 lg:text-sm"
          >How to buy</a
        >
      </div>
    </div>
  </div>
</div>

<!-- Main Navigation Bar - Sticky below top bar -->
<header class="header-main-nav border-b border-gray-200 bg-white shadow-sm">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between space-x-3">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <div
            class="flex h-8 w-8 items-center justify-center rounded-lg bg-primary-600"
          >
            <span class="text-lg font-bold text-white">E</span>
          </div>
          <div class="flex flex-col space-y-1">
            <span class="text-xl font-bold text-primary-600">{siteName}</span>
            <span class="text-xs text-primary-500">Definitely Cheaper</span>
          </div>
        </a>
      </div>

      <!-- Categories Dropdown -->
      <div class="flex items-center">
        <CategoryDropdown client:only="react" />
      </div>

      <!-- Search Bar -->
      <div class="max-w-2xl flex-1">
        <div class="relative">
          <input
            type="text"
            placeholder="Search products..."
            class="w-full rounded-lg border border-gray-300 py-3 pl-4 pr-12 focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
          />
          <button
            class="absolute right-3 top-1/2 -translate-y-1/2 transform p-1"
          >
            <MdOutlineSearch className="h-5 w-5 text-gray-400" client:only="react" />
          </button>
        </div>
      </div>

      <!-- Right Side Actions -->
      <div class="flex items-center space-x-4">
        <!-- Desktop Actions - Hidden on mobile -->
        <div class="hidden items-center space-x-4 md:flex">
          <!-- Orders -->
          <div class="group relative">
            <button
              class="p-2 text-gray-600 transition-colors hover:text-primary-600"
              title="Orders"
            >
              <div class="relative">
                <LuArchive className="h-6 w-6" client:only="react" />
                <!-- Badge -->
                <span
                  style="position: absolute; top: -4px; right: -4px; color: white; border-radius: 50%; width: 14px; height: 14px; display: flex; align-items: center; justify-content: center; font-size: 10px; font-weight: bold; line-height: 1;"
                  class="bg-blue-500"
                >
                  3
                </span>
              </div>
            </button>
            <!-- Tooltip -->
            <div
              class="pointer-events-none absolute left-1/2 top-full mt-2 -translate-x-1/2 transform whitespace-nowrap rounded bg-gray-900 px-2 py-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:opacity-100"
            >
              Orders (3)
            </div>
          </div>

          <!-- Favorites -->
          <div class="group relative">
            <button
              class="p-2 text-gray-600 transition-colors hover:text-primary-600"
              title="Favorites"
            >
              <div class="relative">
                <MdOutlineFavoriteBorder className="h-6 w-6" client:only="react" />
                <!-- Badge -->
                <span
                  style="position: absolute; top: -2px; right: -2px; color: white; border-radius: 50%; width: 14px; height: 14px; display: flex; align-items: center; justify-content: center; font-size: 10px; font-weight: bold; line-height: 1;"
                  class="bg-blue-500"
                >
                  7
                </span>
              </div>
            </button>
            <!-- Tooltip -->
            <div
              class="pointer-events-none absolute left-1/2 top-full mt-2 -translate-x-1/2 transform whitespace-nowrap rounded bg-gray-900 px-2 py-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:opacity-100"
            >
              Favorites (7)
            </div>
          </div>

          
        </div>

        <!-- Cart - Always visible -->
        <div class="group relative">
          <button
            class="p-2 text-gray-600 transition-colors hover:text-primary-600"
            title="My Cart"
          >
            <div class="relative">
              <MdOutlineShoppingCart className="h-6 w-6" client:only="react" />
              <!-- Badge -->
              <span
                style="position: absolute; top: -2px; right: -2px; color: white; border-radius: 50%; width: 14px; height: 14px; display: flex; align-items: center; justify-content: center; font-size: 10px; font-weight: bold; line-height: 1;"
                class="bg-blue-500"
              >
                2
              </span>
            </div>
          </button>
          <!-- Tooltip -->
          <div
            class="pointer-events-none absolute left-1/2 top-full mt-2 -translate-x-1/2 transform whitespace-nowrap rounded bg-gray-900 px-2 py-1 text-xs text-white opacity-0 transition-opacity duration-200 group-hover:opacity-100"
          >
            My Cart (2)
          </div>
        </div>
        <!-- User Login/Register -->
        <div class="hidden md:block">
          <UserDropdown client:only="react" />
        </div>
        <!-- Mobile Menu Toggle -->
        <button
          id="mobileMenuToggle"
          class="relative p-2 text-gray-600 hover:text-gray-900 md:hidden"
          aria-label="Open menu"
        >
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<!-- Mobile Menu Dropdown -->
<div id="mobileMenu" class="fixed inset-0 z-50 hidden md:hidden">
  <div
    class="fixed right-0 top-0 h-full w-80 max-w-[85vw] bg-white shadow-xl"
    id="mobileMenuPanel"
    style="transform: translateX(100%); transition: transform 0.3s ease-in-out; display: none;"
  >
    <div class="flex h-full flex-col">
      <!-- Mobile Menu Header -->
      <div class="flex items-center justify-end border-b border-gray-200 p-4">
        <button
          id="mobileMenuClose"
          class="p-2 text-gray-600 hover:text-gray-900"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Menu Content -->
      <div class="flex-1 overflow-y-auto p-4">
        <!-- Mobile Action Items -->
        <div class="space-y-4">
          <!-- Orders -->
          <div
            class="flex cursor-pointer items-center space-x-3 rounded-lg p-3 transition-colors hover:bg-gray-50"
          >
            <div>
              <div class="font-medium text-gray-900">Orders</div>
              <div class="text-sm text-gray-500">3 pending orders</div>
            </div>
          </div>

          <!-- Favorites -->
          <div
            class="flex cursor-pointer items-center space-x-3 rounded-lg p-3 transition-colors hover:bg-gray-50"
          >
            
            <div>
              <div class="font-medium text-gray-900">Favorites</div>
              <div class="text-sm text-gray-500">7 saved items</div>
            </div>
          </div>

          <!-- User Account -->
          <div
            class="flex cursor-pointer items-center space-x-3 rounded-lg p-3 transition-colors hover:bg-gray-50"
          >
            <div>
              <div class="font-medium text-gray-900">Account</div>
              <div class="text-sm text-gray-500">Login / Register</div>
            </div>
          </div>
        </div>

        <!-- Navigation Links -->
        <div class="mt-8 border-t border-gray-200 pt-6">
          <h3
            class="mb-4 text-sm font-semibold uppercase tracking-wider text-gray-500"
          >
            Navigation
          </h3>
          <nav class="space-y-2">
            <a
              href="/"
              class="block rounded-md px-3 py-2 text-gray-700 transition-colors hover:bg-gray-50 hover:text-primary-600"
              >Home</a
            >
            <a
              href="/products"
              class="block rounded-md px-3 py-2 text-gray-700 transition-colors hover:bg-gray-50 hover:text-primary-600"
              >Products</a
            >
            <a
              href="/categories"
              class="block rounded-md px-3 py-2 text-gray-700 transition-colors hover:bg-gray-50 hover:text-primary-600"
              >Categories</a
            >
            <a
              href="/about"
              class="block rounded-md px-3 py-2 text-gray-700 transition-colors hover:bg-gray-50 hover:text-primary-600"
              >About</a
            >
            <a
              href="/contact"
              class="block rounded-md px-3 py-2 text-gray-700 transition-colors hover:bg-gray-50 hover:text-primary-600"
              >Contact</a
            >
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', function () {
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileMenuPanel = document.getElementById('mobileMenuPanel');
    const mobileMenuToggle = document.getElementById('mobileMenuToggle');
    const mobileMenuClose = document.getElementById('mobileMenuClose');

    function toggleMobileMenu() {
      console.log('toggleMobileMenu called'); // Debug log
      if (mobileMenu && mobileMenuPanel) {
        console.log('Elements found, toggling menu'); // Debug log
        if (mobileMenu.classList.contains('hidden')) {
          console.log('Opening menu'); // Debug log
          mobileMenu.classList.remove('hidden');
          // Make sure the panel is visible immediately
          mobileMenuPanel.style.display = 'block';
          mobileMenuPanel.style.transform = 'translateX(0)';
          console.log('Menu should be visible now'); // Debug log
        } else {
          console.log('Closing menu'); // Debug log
          mobileMenuPanel.style.transform = 'translateX(100%)';
          // Wait for animation to complete before hiding
          setTimeout(() => {
            mobileMenu.classList.add('hidden');
            mobileMenuPanel.style.display = 'none';
          }, 300);
        }
      } else {
        console.log('Elements not found:', { mobileMenu, mobileMenuPanel }); // Debug log
      }
    }

    // Add click event to toggle button
    if (mobileMenuToggle) {
      console.log('Adding event listener to toggle button'); // Debug log
      mobileMenuToggle.addEventListener('click', function (e) {
        e.preventDefault();
        toggleMobileMenu();
      });
    } else {
      console.log('Toggle button not found'); // Debug log
    }

    // Add click event to close button
    if (mobileMenuClose) {
      console.log('Adding event listener to close button'); // Debug log
      mobileMenuClose.addEventListener('click', function (e) {
        e.preventDefault();
        toggleMobileMenu();
      });
    }

    // Close mobile menu when clicking outside
    if (mobileMenu) {
      mobileMenu.addEventListener('click', function (e) {
        if (e.target === this) {
          toggleMobileMenu();
        }
      });
    }
  });
</script>
