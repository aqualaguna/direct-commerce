---
export interface Props {
  items: Array<{
    name: string;
    href?: string;
  }>;
  separator?: string;
  class?: string;
}

const {
  items = [],
  separator = 'chevron',
  class: className = '',
} = Astro.props;

---

<nav aria-label="Breadcrumb" class={`flex items-center space-x-1 text-sm ${className}`}>
  {items.map((item, index) => (
    <div class="flex items-center">
      {index > 0 && (
        separator === 'chevron' ? (
          <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        ) : (
          <span class="text-gray-400 mx-2">/</span>
        )
      )}
      
      {item.href && index < items.length - 1 ? (
        <a
          href={item.href}
          class="text-primary-600 hover:text-primary-800 transition-colors font-medium"
        >
          {item.name}
        </a>
      ) : (
        <span class={`${index === items.length - 1 ? 'text-gray-900 font-medium' : 'text-gray-500'}`}>
          {item.name}
        </span>
      )}
    </div>
  ))}
</nav>
