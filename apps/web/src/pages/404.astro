---
import BaseLayout from '@/layouts/BaseLayout.astro';

const pageTitle = 'Page Not Found - 404';
const pageDescription = 'The page you are looking for could not be found.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="text-center">
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-primary-600">404</h1>
        <h2 class="text-3xl font-semibold text-gray-900 mb-4">Page Not Found</h2>
        <p class="text-lg text-gray-600 mb-8">
          Sorry, the page you are looking for could not be found.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
        >
          Go Home
        </a>
        <a
          href="/products"
          class="border-2 border-primary-600 text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-colors"
        >
          Browse Products
        </a>
      </div>
      
      <div class="mt-12">
        <p class="text-gray-500 mb-4">Or try these popular pages:</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/categories" class="text-primary-600 hover:text-primary-700 underline">Categories</a>
          <a href="/about" class="text-primary-600 hover:text-primary-700 underline">About Us</a>
          <a href="/contact" class="text-primary-600 hover:text-primary-700 underline">Contact</a>
          <a href="/help" class="text-primary-600 hover:text-primary-700 underline">Help Center</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
