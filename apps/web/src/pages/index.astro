---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Hero Carousel Section -->
    <HeroCarouselClient client:load />

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6 animate-fade-in">Why Choose Us</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto animate-slide-up">We provide the best shopping experience with premium products and exceptional service</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center group animate-fade-in stagger-1">
          <div class="w-20 h-20 bg-gradient-to-br from-accent-coral-100 to-accent-coral-200 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-accent-coral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Lightning Fast Shipping</h3>
          <p class="text-gray-600 text-lg">Free shipping on orders over $50 with same-day processing and tracking</p>
        </div>
        
        <div class="text-center group animate-fade-in stagger-2">
          <div class="w-20 h-20 bg-gradient-to-br from-accent-teal-100 to-accent-teal-200 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-accent-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Premium Quality</h3>
          <p class="text-gray-600 text-lg">30-day money-back guarantee on all products with lifetime warranty on select items</p>
        </div>
        
        <div class="text-center group animate-fade-in stagger-3">
          <div class="w-20 h-20 bg-gradient-to-br from-accent-purple-100 to-accent-purple-200 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-accent-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 109.75 9.75A9.75 9.75 0 0012 2.25z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-gray-900">Expert Support</h3>
          <p class="text-gray-600 text-lg">24/7 customer service with dedicated product specialists and live chat</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6 animate-fade-in">Shop by Category</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto animate-slide-up">Explore our curated collections of premium products</p>
      </div>
      
      <div class="animate-fade-in">
        <CategoryCarouselClient client:load categories={categories} />
      </div>
    </div>
  </section>

  <!-- Recommended Products Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6 animate-fade-in">Recommended for you</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto animate-slide-up">Discover our handpicked selection of premium products</p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-2 sm:gap-3 md:gap-4 lg:gap-5 xl:gap-6">
        {featuredProducts.map((product, index) => (
          <div class={`group animate-fade-in stagger-${index + 1} bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden`}>
            <div class="relative">
              <div class="aspect-square bg-gray-100 rounded-t-xl overflow-hidden">
                <img
                  src={product.image}
                  alt={product.name}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              
              <!-- Badges -->
              <div class="absolute top-2 left-2 flex flex-col space-y-2">
                {product.isNew && <Badge variant="new" />}
                {product.isOnSale && <Badge variant="sale" />}
                {product.isFeatured && <Badge variant="featured" />}
              </div>
            </div>
            
            <div class="p-2 sm:p-4 flex flex-col h-full">
              <h3 class="font-bold text-gray-900 mb-2 sm:mb-3 text-sm sm:text-lg line-clamp-2">{product.name}</h3>
              
              <!-- Rating -->
              <div class="flex items-center mb-2 sm:mb-3">
                <svg class="w-3 h-3 sm:w-4 sm:h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="text-xs sm:text-sm text-gray-600 font-medium">{product.rating}</span>
              </div>
              
              <!-- Price -->
              <div class="flex items-center mb-3">
                <div class="flex items-center space-x-1 sm:space-x-2">
                  {product.salePrice ? (
                    <>
                      <span class="text-lg sm:text-xl font-bold text-accent-coral-600">${product.salePrice}</span>
                      <span class="text-xs sm:text-sm text-gray-500 line-through">${product.price}</span>
                    </>
                  ) : (
                    <span class="text-lg sm:text-xl font-bold text-gray-900">${product.price}</span>
                  )}
                </div>
              </div>
              
              <!-- Add to Cart Button -->
              <Button variant="primary" size="sm" class="text-xs sm:text-sm px-2 py-1 sm:px-3 sm:py-2 w-full hidden">
                Add to Cart
              </Button>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12 animate-fade-in">
        <Button variant="primary" size="lg" href="/products">
          View All Products
        </Button>
      </div>
    </div>
  </section>

  <!-- Our Partners Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6 animate-fade-in">
          <span class="text-primary-600">Our</span> Partners
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto animate-slide-up">
          We have worked with renowned names. From hospitals, clinics and homes, we have worked with partners from all backgrounds.
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
        {partners.map((partner, index) => (
          <div class={`group animate-fade-in stagger-${index + 1}`}>
            <div class="flex items-center justify-center w-full h-30 bg-white rounded-xl transition-all duration-300 group-hover:scale-105 p-2">
              <img
                src={partner.logo}
                alt={partner.name}
                class="w-full h-full object-contain transition-transform duration-300 group-hover:scale-110"
              />
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

</BaseLayout>
