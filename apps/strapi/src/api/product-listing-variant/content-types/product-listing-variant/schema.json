{
  "kind": "collectionType",
  "collectionName": "product_listing_variants",
  "info": {
    "singularName": "product-listing-variant",
    "pluralName": "product-listing-variants",
    "displayName": "Product Listing Variant",
    "description": "Product variants with specific options, pricing, and inventory"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "basePrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "discountPrice": {
      "type": "decimal",
      "min": 0
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "required": true
    },
    "productListing": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-listing.product-listing",
      "inversedBy": "variants",
      "required": true
    },
    "optionValues": {
      "type": "relation", 
      "relation": "manyToMany",
      "target": "api::option-value.option-value",
      "mappedBy": "variants"
    },
    "inventory": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "images": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
}
