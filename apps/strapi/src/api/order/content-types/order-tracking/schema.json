{
  "kind": "collectionType",
  "collectionName": "order_trackings",
  "info": {
    "singularName": "order-tracking",
    "pluralName": "order-trackings",
    "displayName": "Order Tracking",
    "description": "Order tracking and shipment updates"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "required": true
    },
    "trackingNumber": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "carrier": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "carrierCode": {
      "type": "string",
      "maxLength": 20
    },
    "trackingUrl": {
      "type": "string",
      "maxLength": 500
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "in_transit",
        "out_for_delivery",
        "delivered",
        "failed",
        "returned",
        "lost",
        "damaged"
      ],
      "default": "pending",
      "required": true
    },
    "currentLocation": {
      "type": "component",
      "component": "shared.location"
    },
    "estimatedDelivery": {
      "type": "datetime"
    },
    "actualDelivery": {
      "type": "datetime"
    },
    "shipmentDate": {
      "type": "datetime"
    },
    "packageWeight": {
      "type": "decimal",
      "min": 0
    },
    "packageDimensions": {
      "type": "json"
    },
    "signatureRequired": {
      "type": "boolean",
      "default": false
    },
    "signatureName": {
      "type": "string",
      "maxLength": 100
    },
    "deliveryNotes": {
      "type": "text",
      "maxLength": 1000
    },
    "lastUpdate": {
      "type": "datetime"
    },
    "lastUpdateSource": {
      "type": "enumeration",
      "enum": [
        "carrier_api",
        "webhook",
        "manual",
        "email",
        "sms"
      ],
      "default": "manual"
    },
    "updateHistory": {
      "type": "json"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "retryCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "lastRetryAt": {
      "type": "datetime"
    },
    "nextRetryAt": {
      "type": "datetime"
    },
    "webhookUrl": {
      "type": "string",
      "maxLength": 500
    },
    "webhookSecret": {
      "type": "string",
      "maxLength": 100
    },
    "metadata": {
      "type": "json"
    }
  }
}
