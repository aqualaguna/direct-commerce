{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Ecommerce orders with comprehensive management"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 1,
      "maxLength": 50
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "sessionId": {
      "type": "string",
      "required": false
    },
    "checkout": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::checkout.checkout"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "processing",
        "shipping",
        "delivered",
        "returned",
        "cancelled",
        "refunded"
      ],
      "default": "pending",
      "required": true
    },
    "statusHistory": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order-status",
      "mappedBy": "order"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order-item",
      "mappedBy": "order"
    },
    "subtotal": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "tax": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "shipping": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "currency": {
      "type": "string",
      "required": true,
      "default": "USD",
      "maxLength": 3
    },
    "shippingAddress": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::address.address",
      "required": true
    },
    "billingAddress": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::address.address",
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "failed",
        "refunded",
        "cancelled"
      ],
      "default": "pending",
      "required": true
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "order"
    },
    "shippingMethod": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "trackingNumber": {
      "type": "string",
      "maxLength": 100
    },
    "estimatedDelivery": {
      "type": "datetime"
    },
    "actualDelivery": {
      "type": "datetime"
    },
    "orderSource": {
      "type": "enumeration",
      "enum": [
        "web",
        "mobile",
        "admin",
        "api"
      ],
      "default": "web",
      "required": true
    },
    "customerNotes": {
      "type": "text",
      "maxLength": 1000
    },
    "adminNotes": {
      "type": "text",
      "maxLength": 2000
    },
    "fraudScore": {
      "type": "integer",
      "min": 0,
      "max": 100
    },
    "isGift": {
      "type": "boolean",
      "default": false
    },
    "giftMessage": {
      "type": "text",
      "maxLength": 500
    },
    "metadata": {
      "type": "json"
    }
  }
}
