{
  "kind": "collectionType",
  "collectionName": "payment_comments",
  "info": {
    "singularName": "payment-comment",
    "pluralName": "payment-comments",
    "displayName": "Payment Comment",
    "description": "Comments for payments"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "payment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::payment.payment",
      "inversedBy": "paymentComments"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": false
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "admin",
        "system",
        "gateway",
        "internal",
        "warning",
        "info"
      ],
      "required": true,
      "default": "admin"
    },
    "content": {
      "type": "text",
      "required": true,
      "maxLength": 2000
    },
    "isInternal": {
      "type": "boolean",
      "default": false
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "metadata": {
      "type": "json",
      "description": "Additional metadata for the comment"
    }
  }
}
