{
  "kind": "collectionType",
  "collectionName": "order_confirmations",
  "info": {
    "singularName": "order-confirmation",
    "pluralName": "order-confirmations",
    "displayName": "Order Confirmation",
    "description": "Order confirmations and receipt generation"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "required": true
    },
    "confirmationNumber": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "confirmationType": {
      "type": "enumeration",
      "enum": [
        "automatic",
        "manual",
        "payment_triggered"
      ],
      "default": "automatic",
      "required": true
    },
    "emailTemplate": {
      "type": "string",
      "maxLength": 100
    },
    "emailSent": {
      "type": "boolean",
      "default": false
    },
    "emailSentAt": {
      "type": "datetime"
    },
    "emailAddress": {
      "type": "email",
      "required": true
    },
    "smsNotificationSent": {
      "type": "boolean",
      "default": false
    },
    "smsNotificationSentAt": {
      "type": "datetime"
    },
    "phoneNumber": {
      "type": "string",
      "maxLength": 20
    },
    "receiptGenerated": {
      "type": "boolean",
      "default": false
    },
    "receiptUrl": {
      "type": "string",
      "maxLength": 500
    },
    "receiptFormat": {
      "type": "enumeration",
      "enum": [
        "pdf",
        "html",
        "json"
      ],
      "default": "pdf"
    },
    "receiptGeneratedAt": {
      "type": "datetime"
    },
    "printingQueue": {
      "type": "boolean",
      "default": false
    },
    "customMessage": {
      "type": "text",
      "maxLength": 1000
    },
    "promotionalContent": {
      "type": "text",
      "maxLength": 2000
    },
    "surveyLink": {
      "type": "string",
      "maxLength": 500
    },
    "socialSharingEnabled": {
      "type": "boolean",
      "default": false
    },
    "estimatedProcessingTime": {
      "type": "string",
      "maxLength": 200
    },
    "nextSteps": {
      "type": "text",
      "maxLength": 1000
    }
  }
}
