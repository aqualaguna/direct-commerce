{
  "kind": "collectionType",
  "collectionName": "inventory_histories",
  "info": {
    "singularName": "inventory-history",
    "pluralName": "inventory-histories",
    "displayName": "Inventory History",
    "description": "Audit trail for all inventory changes"
  },
  "options": {
    "draftAndPublish": false,
    "comment": "Comprehensive audit trail for inventory management"
  },
  "pluginOptions": {},
  "attributes": {
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "required": true
    },
    "action": {
      "type": "enumeration",
      "enum": ["increase", "decrease", "reserve", "release", "adjust", "initialize"],
      "required": true
    },
    "quantityBefore": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "quantityAfter": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "quantityChanged": {
      "type": "integer",
      "required": true
    },
    "reservedBefore": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "reservedAfter": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "reason": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "source": {
      "type": "enumeration",
      "enum": ["manual", "order", "return", "adjustment", "system"],
      "required": true,
      "default": "manual"
    },
    "orderId": {
      "type": "string"
    },
    "changedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "timestamp": {
      "type": "datetime",
      "required": true
    },
    "metadata": {
      "type": "json"
    }
  }
}
