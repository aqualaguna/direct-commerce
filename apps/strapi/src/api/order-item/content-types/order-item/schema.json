{
  "kind": "collectionType",
  "collectionName": "order_items",
  "info": {
    "singularName": "order-item",
    "pluralName": "order-items",
    "displayName": "Order Item",
    "description": "Individual items within an order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "items"
    },
    "productListing": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-listing.product-listing",
      "required": true
    },
    "productListingVariant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-listing-variant.product-listing-variant"
    },
    "sku": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "productName": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "productDescription": {
      "type": "text",
      "maxLength": 2000
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    },
    "unitPrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "linePrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "originalPrice": {
      "type": "decimal",
      "min": 0
    },
    "discountAmount": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "taxAmount": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "weight": {
      "type": "decimal",
      "min": 0
    },
    "dimensions": {
      "type": "json"
    },
    "isDigital": {
      "type": "boolean",
      "default": false
    },
    "digitalDeliveryStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "delivered",
        "failed"
      ]
    },
    "customizations": {
      "type": "json"
    },
    "giftWrapping": {
      "type": "boolean",
      "default": false
    },
    "returnEligible": {
      "type": "boolean",
      "default": true
    },
    "warrantyInfo": {
      "type": "text",
      "maxLength": 500
    }
  }
}
