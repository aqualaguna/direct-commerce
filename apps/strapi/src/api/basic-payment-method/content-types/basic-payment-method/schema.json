{
  "kind": "collectionType",
  "collectionName": "basic_payment_methods",
  "info": {
    "singularName": "basic-payment-method",
    "pluralName": "basic-payment-methods",
    "displayName": "Basic Payment Method",
    "description": "Basic payment methods for manual payments"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "code": {
      "type": "enumeration",
      "enum": [
        "cash",
        "bank_transfer",
        "check",
        "money_order",
        "other"
      ],
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "requiresConfirmation": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "isAutomated": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "gatewayCode": {
      "type": "string",
      "description": "For future automated payment gateways (stripe, paypal, etc.)"
    },
    "instructions": {
      "type": "text",
      "description": "Payment instructions for customers"
    },
    "manualPayments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::manual-payment.manual-payment",
      "mappedBy": "paymentMethod"
    }
  }
}
