{
  "kind": "collectionType",
  "collectionName": "checkout_sessions",
  "info": {
    "singularName": "checkout-session",
    "pluralName": "checkout-sessions",
    "displayName": "Checkout Session",
    "description": "Multi-step checkout session management for guest and registered users"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "sessionId": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 32,
      "maxLength": 64
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "checkoutSessions"
    },
    "cart": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::cart.cart",
      "mappedBy": "checkoutSession"
    },
    "step": {
      "type": "enumeration",
      "enum": [
        "cart",
        "shipping",
        "billing",
        "payment",
        "review",
        "confirmation"
      ],
      "default": "cart",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "completed",
        "abandoned",
        "expired"
      ],
      "default": "active",
      "required": true
    },
    "shippingAddress": {
      "type": "component",
      "component": "shared.address",
      "required": false
    },
    "billingAddress": {
      "type": "component",
      "component": "shared.address",
      "required": false
    },
    "shippingMethod": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "paymentMethod": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "order": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order",
      "mappedBy": "checkoutSession"
    },
    "expiresAt": {
      "type": "datetime",
      "required": true
    },
    "abandonedAt": {
      "type": "datetime",
      "required": false
    },
    "completedAt": {
      "type": "datetime",
      "required": false
    },
    "metadata": {
      "type": "json",
      "required": false
    }
  }
}
