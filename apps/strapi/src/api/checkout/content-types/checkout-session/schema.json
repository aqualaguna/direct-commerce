{
  "kind": "collectionType",
  "collectionName": "checkout_sessions",
  "info": {
    "singularName": "checkout-session",
    "pluralName": "checkout-sessions",
    "displayName": "Checkout Session",
    "description": "Multi-step checkout session management for guest and registered users"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "sessionId": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 32,
      "maxLength": 64
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },

    "currentStep": {
      "type": "string",
      "default": "cart",
      "required": true,
      "maxLength": 50
    },
    "stepProgress": {
      "type": "json",
      "required": false,
      "description": "Step progress tracking with completion status and form data"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "completed",
        "abandoned",
        "expired"
      ],
      "default": "active",
      "required": true
    },
    "shippingAddress": {
      "type": "component",
      "component": "shared.address",
      "required": false
    },
    "billingAddress": {
      "type": "component",
      "component": "shared.address",
      "required": false
    },
    "shippingMethod": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "paymentMethod": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },

    "expiresAt": {
      "type": "datetime",
      "required": true
    },
    "abandonedAt": {
      "type": "datetime",
      "required": false
    },
    "completedAt": {
      "type": "datetime",
      "required": false
    },
    "metadata": {
      "type": "json",
      "required": false
    },
    "guestCheckout": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::guest-checkout.guest-checkout",
      "inversedBy": "checkoutSession",
      "description": "Associated guest checkout"
    }
  }
}
