{
  "kind": "collectionType",
  "collectionName": "checkout_sessions",
  "info": {
    "singularName": "checkout-session",
    "pluralName": "checkout-sessions",
    "displayName": "Checkout Session",
    "description": "Multi-step checkout session management for guest and registered users"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "sessionId": {
      "type": "string",
      "required": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "completed",
        "abandoned",
        "expired"
      ],
      "default": "active",
      "required": true
    },
    "shippingAddress": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::address.address"
    },
    "billingAddress": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::address.address"
    },
    "shippingMethod": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "paymentMethod": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::basic-payment-method.basic-payment-method",
      "required": true
    },
    "expiresAt": {
      "type": "datetime",
      "required": true
    },
    "abandonedAt": {
      "type": "datetime",
      "required": false
    },
    "completedAt": {
      "type": "datetime",
      "required": false
    },
    "metadata": {
      "type": "json",
      "required": false
    }
  }
}
