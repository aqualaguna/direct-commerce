{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Base product entity - source of truth for product data"
  },
  "options": {
    "draftAndPublish": true,
    "comment": "Base product entity - website-facing attributes moved to ProductListing"
  },
  "attributes": {
    "sku": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "basePrice": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "comparePrice": {
      "type": "decimal",
      "min": 0
    },
    "inventory": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "active", "inactive"],
      "default": "draft",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "wishlistedBy": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "wishlist"
    },
    "inventoryRecord": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::inventory.inventory",
      "mappedBy": "product"
    },
    "productListings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-listing.product-listing",
      "mappedBy": "product"
    }
  }
}
