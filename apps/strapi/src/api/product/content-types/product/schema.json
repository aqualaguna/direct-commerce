
{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Ecommerce products with pricing, inventory, and media"
  },
  "options": {
    "draftAndPublish": true,
    "comment": "Product content type for ecommerce functionality"
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 1,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": true,
      "maxLength": 500
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "comparePrice": {
      "type": "decimal",
      "min": 0
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "inventory": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "active", "inactive"],
      "default": "draft",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "wishlistedBy": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "wishlist"
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "required": false
    },
    "inventoryRecord": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::inventory.inventory",
      "mappedBy": "product"
    }
  }
}
