{
  "kind": "collectionType",
  "collectionName": "checkout_steps",
  "info": {
    "singularName": "checkout-step",
    "pluralName": "checkout-steps",
    "displayName": "Checkout Step",
    "description": "Checkout step management and progression tracking"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "checkoutSession": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::checkout-session.checkout-session",
      "inversedBy": "checkoutSteps"
    },
    "stepName": {
      "type": "enumeration",
      "enum": [
        "cart",
        "shipping",
        "billing",
        "payment",
        "review",
        "confirmation"
      ],
      "required": true
    },
    "stepOrder": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 10
    },
    "isCompleted": {
      "type": "boolean",
      "default": false
    },
    "isRequired": {
      "type": "boolean",
      "default": true
    },
    "isActive": {
      "type": "boolean",
      "default": false
    },
    "validationRules": {
      "type": "json",
      "default": {}
    },
    "errorMessages": {
      "type": "json",
      "default": {}
    },
    "completedAt": {
      "type": "datetime"
    },
    "startedAt": {
      "type": "datetime"
    },
    "timeSpent": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "attempts": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "lastAttemptAt": {
      "type": "datetime"
    },
    "stepData": {
      "type": "json",
      "default": {}
    },
    "validationErrors": {
      "type": "json",
      "default": {}
    },
    "navigationHistory": {
      "type": "json",
      "default": []
    },
    "analytics": {
      "type": "json",
      "default": {}
    }
  }
}
