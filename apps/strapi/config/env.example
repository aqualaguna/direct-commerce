# =============================================================================
# Environment Configuration for Strapi Ecommerce Platform
# =============================================================================
# 
# Copy this file to .env and update the values for your environment.
# Never commit .env files to version control.
#
# For production, use environment variables or a secure secrets management system.
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type (postgres, sqlite, mysql)
DATABASE_CLIENT=postgres

# PostgreSQL Configuration (used when DATABASE_CLIENT=postgres)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi_ecommerce
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi_password
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# SQLite Configuration (used when DATABASE_CLIENT=sqlite)
DATABASE_FILENAME=.tmp/data.db

# =============================================================================
# STRAPI CORE CONFIGURATION
# =============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=1337

# Application Keys (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
APP_KEYS=your-app-keys-here,another-app-key-here

# API Token Salt (generate with: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))")
API_TOKEN_SALT=your-api-token-salt-here

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
JWT_SECRET=your-jwt-secret-here

# Transfer Token Salt (generate with: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))")
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4321,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Local File Upload (default)
UPLOAD_PROVIDER=local

# Cloudinary Configuration (optional)
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_KEY=your-cloudinary-key
CLOUDINARY_SECRET=your-cloudinary-secret

# AWS S3 Configuration (optional)
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your-access-key
AWS_S3_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass
SMTP_SECURE=false

# SendGrid Configuration (optional)
SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# PayPal Configuration (optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=your-ga-id

# Sentry Configuration (optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
NODE_ENV=development

# Debug Mode
DEBUG=false

# Auto-reload (development only)
AUTO_RELOAD=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production URL
URL=https://yourdomain.com

# Admin Panel URL (optional)
ADMIN_URL=/admin

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Format (json, simple)
LOG_FORMAT=simple

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Ecommerce-specific settings
ECOMMERCE_CURRENCY=USD
ECOMMERCE_TAX_RATE=0.08
ECOMMERCE_SHIPPING_FREE_THRESHOLD=50.00

# Feature flags
FEATURE_WISHLIST_ENABLED=true
FEATURE_REVIEWS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
